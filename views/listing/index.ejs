<% layout("/layouts/boilerplate.ejs") %>
<body>

    <h1 style="text-align: center;" class="mt-3 mb-4">Welcome to Wanderlust..!</h1>

    <div class="row row-cols-lg-4">
        <% for(listing of listings){%>
          <a href="/listings/<%=listing._id%>" class="anchor">
        <div class="card col listing-card" style="width: 20rem;">
          <img src="<%=listing.image.url%>" class="card-img-top" alt="listing image" style="height: 20rem;">
          <div class="card-body">
            <h5 class="card-title"><b><%=listing.title%></b></h5>
            <p class="card-text"> &#8377; <%=listing.price.toLocaleString("en-IN")%></p>
          </div>
        </div>
          </a>
        <%}%>
      </div>

      <script src="/js/app.js"></script>
      
</body>
